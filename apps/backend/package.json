{
  "name": "mobile-vscode-server",
  "displayName": "Mobile VSCode Server",
  "publisher": "codex",
  "version": "0.1.0",
  "description": "Provides GraphQL, Git and Y.js back-end for the Mobile VSCode client",
  "main": "dist/extension.bundle.js",
  "engines": {
    "vscode": "^1.60.0"
  },
  "activationEvents": [
    "onCommand:mobile-vscode-server.start"
  ],
  "files": [
    "dist",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mobile-vscode-server.start",
        "title": "Start Mobile VSCode Server"
      },
      {
        "command": "mobile-vscode-server.stop",
        "title": "Stop Mobile VSCode Server"
      }
    ],
    "configuration": {
      "title": "Mobile VSCode Server",
      "properties": {
        "mobile-vscode-server.port": {
          "type": "number",
          "default": 4000,
          "description": "Port for the server to listen on."
        },
        "mobile-vscode-server.jwtSecret": {
          "type": "string",
          "description": "A persistent secret for signing JWTs. If not set, a temporary one is generated on each launch, requiring re-pairing.",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "package:extension": "yarn build && yarn bundle && npx vsce package --no-dependencies -o ../../mobile-vscode-server.vsix",
    "build": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "test": "jest --passWithNoTests",
    "bundle": "node scripts/bundle.js",
    "start": "node dist/extension.bundle.js",
    "dev": "yarn build && yarn bundle && yarn start"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@graphql-tools/schema": "^9.0.0",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-subscriptions": "^2.0.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.11.0",
    "jsonwebtoken": "^9.0.0",
    "lru-cache": "^11.1.0",
    "simple-git": "^3.19.0",
    "ws": "^8.12.0",
    "y-websocket": "^1.5.0",
    "yjs": "^13.5.43"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.16.18",
    "@types/vscode": "^1.60.0",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.25.0",
    "jest": "^29.5.0",
    "jest-util": "^30.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ales27pm/mobile-vscode-project"
  }
}
