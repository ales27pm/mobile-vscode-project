{
  "name": "mobile-vscode",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "lint": "eslint . --ext .ts,.tsx",
    "build": "yarn workspace mobile-vscode-server build",
    "start:backend": "yarn workspace mobile-vscode-server start",
    "start:mobile": "yarn workspace mobile start",
    "test": "yarn workspace mobile-vscode-server test && yarn workspace shared test",
    "plugin-sdk-validate": "plugin-sdk-validate"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/typescript": "^3.0.4",
    "@graphql-codegen/typescript-operations": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "typescript": "^5.1.3",
    "yarn": "^1.22.19"
  },
  "peerDependencies": {
    "@your-sdk/core": "^1.2.3"
  }
}
