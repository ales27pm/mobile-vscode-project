{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "react-native-monaco-editor": ["./packages/react-native-monaco-editor/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
